pipeline {
    agent any
    tools {
        go '1.23.2' // Matches the Go version in Jenkins
    }
    environment {
        NEXUS_URL = '192.168.1.46:8083'
        NEXUS_REPO = 'docker-hub-repo'
        TAG = 'latest'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/TrapLord92/Advanced-Patterns-For-Building-Json-Apis-and-web-applicattions.git'
            }
        }
        stage('Build') {
            steps {
                sh 'go version' // Verifies Go is set up
                sh 'go mod tidy' // Installs dependencies
                // Adjust the path if your main.go is located in cmd/ or another folder
                sh 'go build -o app ./cmd' 
            }
        }
        stage('Test') {
            steps {
                sh 'go test ./...' // Runs tests
            }
        }
        stage('Docker Build and Push') {
            steps {
                sh 'docker build -t ${NEXUS_URL}/${NEXUS_REPO}:${TAG} .'
                sh 'docker push ${NEXUS_URL}/${NEXUS_REPO}:${TAG}'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
