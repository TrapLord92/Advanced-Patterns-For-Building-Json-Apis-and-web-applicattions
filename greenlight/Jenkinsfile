pipeline {
    agent any // Specify the agent by label
    tools {
        go '1.23.2' // Ensure the tool is referenced correctly
    }
    stages {
        stage('Build') {
            steps {
                echo 'checking go version...'
                sh 'go version'
                echo 'Building the app'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the App...'
                echo 'test complete'
            }
        }
        stage('Deploy') {
            steps {
                echo 'preparing the App for deployment...'
                echo 'deployment complete'
            }
        }
    }
}
